unit UClassEmpresa;

interface

uses System.SysUtils, System.Classes, UClassAtividadeSecEmpresa, System.Generics.Collections, UClassSocioEmpresa;

type
  TEmpresa = class(TPersistent)
  private

    FCnpj: string;
    FTipo: string;
    FAbertura: string;
    FNome: string;
    FFantasia: string;
    FTextAtividadePrincipalEmpresa: string;
    FCodAtividadePrincipalEmpresa: string;
    FAtividadeSecundaria: TObjectList<TAtividadeSecEmpresa>;
    FNaturezaJuridica: string;
    FLogradouro: string;
    FNumero: string;
    FComplemento: string;
    FCep: string;
    FBairro: string;
    FMunicipio: string;
    FUf: string;
    FEmail: string;
    FTelefone: string;
    FEfr: string;
    FSituacao: string;
    FDataSituacao: string;
    FMotivoSituacao: string;
    FSituacaoEspecial: string;
    FDataSituacaoEspecial: string;
    FCapitalSocial: string;
    FQsa: TObjectList<TSocioAdmEmpresa>;

    // extra	objeto	Campo reservado para uso futuro.

  public

    /// <summary>
    /// Cnpj no formato 00.000.000/0000-00.
    /// </summary>
    property Cnpj: string read FCnpj write FCnpj;

    /// <summary>
    /// Valores possíveis: MATRIZ, FILIAL.
    /// </summary>
    property Tipo: string read FTipo write FTipo;

    /// <summary>
    /// Data de Abertura no formato dd/mm/aaaa.
    /// </summary>
    property Abertura: string read FAbertura write FAbertura;

    /// <summary>
    /// Razão social.
    /// </summary>
    property Nome: string read FNome write FNome;

    /// <summary>
    /// Nome Fantasia.
    /// </summary>
    property Fantasia: string read FFantasia write FFantasia;

    property TextAtividadePrincipalEmpresa: string read FTextAtividadePrincipalEmpresa write FTextAtividadePrincipalEmpresa;

    property CodAtividadePrincipalEmpresa: string read FCodAtividadePrincipalEmpresa write FCodAtividadePrincipalEmpresa;

    /// <summary>
    /// Atividades secundárias.
    ///
    property AtividadeSecundaria: TObjectList<TAtividadeSecEmpresa> read FAtividadeSecundaria write FAtividadeSecundaria;

    /// <summary>
    /// Natureza jurídica.
    /// </summary>
    property NaturezaJuridica: string read FNaturezaJuridica write FNaturezaJuridica;

    /// <summary>
    /// Logradouro.
    /// </summary>
    property Logradouro: string read FLogradouro write FLogradouro;

    /// <summary>
    /// Número.
    /// </summary>
    property Numero: string read FNumero write FNumero;

    /// <summary>
    /// Complemento.
    /// </summary>
    property Complemento: string read FComplemento write FComplemento;

    /// <summary>
    /// Cep no formato 00.000-000.
    /// </summary>
    property Cep: string read FCep write FCep;

    /// <summary>
    /// Bairro.
    /// </summary>
    property Bairro: string read FBairro write FBairro;

    /// <summary>
    /// Município.
    /// </summary>
    property Municipio: string read FMunicipio write FMunicipio;

    /// <summary>
    /// Sigla da Unidade da Federação.
    /// </summary>
    property Uf: string read FUf write FUf;

    /// <summary>
    /// Email.
    /// </summary>
    property Email: string read FEmail write FEmail;

    /// <summary>
    /// Telefone.
    /// </summary>
    property Telefone: string read FTelefone write FTelefone;

    /// <summary>
    /// Ente Federativo Responsável, disponibilizado apenas para CNPJs da administração pública.
    /// </summary>
    property Efr: string read FEfr write FEfr;

    /// <summary>
    /// Situação.
    /// </summary>
    property Situacao: string read FSituacao write FSituacao;

    /// <summary>
    /// Data da situação no formato dd/mm/aaaa.
    /// </summary>
    property DataSituacao: string read FDataSituacao write FDataSituacao;

    /// <summary>
    /// Motivo da situação.
    /// </summary>
    property MotivoSituacao: string read FMotivoSituacao write FMotivoSituacao;

    /// <summary>
    /// Situação especial.
    /// </summary>
    property SituacaoEspecial: string read FSituacaoEspecial write FSituacaoEspecial;

    /// <summary>
    /// Data da situação especial no formato dd/mm/aaaa.
    /// </summary>
    property DataSituacaoEspecial: string read FDataSituacaoEspecial write FDataSituacaoEspecial;

    /// <summary>
    /// Valor do capital social no formato 0.00.
    /// </summary>
    property CapitalSocial: string read FCapitalSocial write FCapitalSocial;

    /// <summary>
    /// Array<objeto>	Quadro de Sócios e Administradores.
    /// </summary>
    property Qsa: TObjectList<TSocioAdmEmpresa> read FQsa write FQsa;

    // extra	objeto	Campo reservado para uso futuro.

    constructor Create; overload;
    destructor Destroy; override;

  published

  end;

implementation

{ TDadosEmpresa }

constructor TEmpresa.Create;
begin

  Self.FAtividadeSecundaria := TObjectList<TAtividadeSecEmpresa>.Create;
  Self.FQsa := TObjectList<TSocioAdmEmpresa>.Create;

end;

destructor TEmpresa.Destroy;
begin

  inherited;
end;

end.
